<Page x:Class="MoyuWindows.Views.ChoicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="350"
      Title="选择题"
      Background="Transparent"
      KeyDown="Page_KeyDown"
      Loaded="Page_Loaded">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部进度条 -->
        <StackPanel Grid.Row="0">
            <ProgressBar x:Name="ProgressBar"
                         Style="{StaticResource ModernProgressBar}"
                         Value="0"
                         Maximum="100"
                         Height="4"/>
            <TextBlock x:Name="ProgressText"
                       Text="1/20"
                       Style="{StaticResource MutedText}"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"/>
        </StackPanel>
        
        <!-- 题目 -->
        <StackPanel Grid.Row="1" Margin="0,24,0,0">
            <TextBlock Text="请选择正确的单词"
                       Style="{StaticResource MutedText}"
                       HorizontalAlignment="Center"/>
            
            <TextBlock x:Name="QuestionText"
                       Text="n. 例子，实例"
                       Style="{StaticResource HeadingMedium}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       MaxWidth="300"
                       Margin="0,12,0,0"/>
        </StackPanel>
        
        <!-- 选项 -->
        <StackPanel Grid.Row="2" 
                    VerticalAlignment="Center"
                    Margin="0,24,0,0">
            <Button x:Name="Option1"
                    Content="A. example"
                    Style="{StaticResource OptionButton}"
                    Click="Option_Click"
                    Tag="0"/>
            <Button x:Name="Option2"
                    Content="B. sample"
                    Style="{StaticResource OptionButton}"
                    Click="Option_Click"
                    Tag="1"/>
            <Button x:Name="Option3"
                    Content="C. instance"
                    Style="{StaticResource OptionButton}"
                    Click="Option_Click"
                    Tag="2"/>
            <Button x:Name="Option4"
                    Content="D. model"
                    Style="{StaticResource OptionButton}"
                    Click="Option_Click"
                    Tag="3"/>
        </StackPanel>
        
        <!-- 提示文字 -->
        <TextBlock Grid.Row="3"
                   Text="按 1-4 快速选择"
                   Style="{StaticResource MutedText}"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,16"/>
    </Grid>
</Page>

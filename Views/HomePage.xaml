<Page x:Class="MoyuWindows.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="350"
      Title="首页"
      Background="Transparent">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部信息 -->
        <StackPanel Grid.Row="0" Margin="0,20,0,0">
            <!-- 当前词书 -->
            <TextBlock x:Name="BookNameText"
                       Text="四级核心词汇"
                       Style="{StaticResource MutedText}"
                       HorizontalAlignment="Center"/>
            
            <TextBlock x:Name="ProgressText"
                       Text="进度: 0/2500"
                       Style="{StaticResource BodyText}"
                       HorizontalAlignment="Center"
                       Margin="0,4,0,0"/>
            
            <!-- 进度条 -->
            <ProgressBar x:Name="BookProgressBar"
                         Style="{StaticResource ModernProgressBar}"
                         Value="0"
                         Maximum="100"
                         Height="4"
                         Margin="20,12,20,0"/>
        </StackPanel>
        
        <!-- 中间数量选择器 -->
        <Grid Grid.Row="1" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">
                <!-- 标题 -->
                <TextBlock Text="今日学习"
                           Style="{StaticResource HeadingSmall}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                
                <!-- 数量选择器 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- 减少按钮 -->
                    <Button Grid.Column="0"
                            Content="−"
                            Style="{StaticResource IconButton}"
                            Width="48" Height="48"
                            FontSize="24"
                            Click="DecreaseCount_Click"/>
                    
                    <!-- 数量显示 -->
                    <StackPanel Grid.Column="1" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <TextBlock x:Name="WordCountText"
                                   Text="20"
                                   FontSize="72"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="个单词"
                                   Style="{StaticResource BodyText}"
                                   HorizontalAlignment="Center"
                                   Margin="0,-8,0,0"/>
                    </StackPanel>
                    
                    <!-- 增加按钮 -->
                    <Button Grid.Column="2"
                            Content="+"
                            Style="{StaticResource IconButton}"
                            Width="48" Height="48"
                            FontSize="24"
                            Click="IncreaseCount_Click"/>
                </Grid>
                
                <!-- 快捷选择 -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            Margin="0,24,0,0">
                    <Button Content="10" Style="{StaticResource SecondaryButton}"
                            Padding="16,8" Margin="4,0"
                            Click="QuickSelect_Click" Tag="10"/>
                    <Button Content="20" Style="{StaticResource SecondaryButton}"
                            Padding="16,8" Margin="4,0"
                            Click="QuickSelect_Click" Tag="20"/>
                    <Button Content="30" Style="{StaticResource SecondaryButton}"
                            Padding="16,8" Margin="4,0"
                            Click="QuickSelect_Click" Tag="30"/>
                    <Button Content="50" Style="{StaticResource SecondaryButton}"
                            Padding="16,8" Margin="4,0"
                            Click="QuickSelect_Click" Tag="50"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <!-- 今日统计 -->
        <Border Grid.Row="2" 
                Style="{StaticResource Card}"
                Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock x:Name="TodayLearnedText"
                               Text="0"
                               Style="{StaticResource HeadingMedium}"
                               Foreground="{StaticResource PrimaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="今日学习"
                               Style="{StaticResource MutedText}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock x:Name="StreakDaysText"
                               Text="0"
                               Style="{StaticResource HeadingMedium}"
                               Foreground="{StaticResource SecondaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="连续天数"
                               Style="{StaticResource MutedText}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock x:Name="AccuracyText"
                               Text="0%"
                               Style="{StaticResource HeadingMedium}"
                               Foreground="{StaticResource WarningBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="正确率"
                               Style="{StaticResource MutedText}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 开始按钮 -->
        <Button Grid.Row="3"
                Content="开始学习"
                Style="{StaticResource PrimaryButton}"
                FontSize="16"
                Padding="0,16"
                Click="StartLearning_Click"/>
    </Grid>
</Page>

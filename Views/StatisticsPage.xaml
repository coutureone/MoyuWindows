<Page x:Class="MoyuWindows.Views.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:MoyuWindows.Views"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="350"
      Title="统计"
      Background="Transparent"
      Loaded="Page_Loaded">
    
    <Page.Resources>
        <local:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
    </Page.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- 标题栏 -->
            <Grid Margin="0,0,0,16">
                <Button Content="←"
                        Style="{StaticResource IconButton}"
                        HorizontalAlignment="Left"
                        Click="Back_Click"/>
                
                <TextBlock Text="学习统计"
                           Style="{StaticResource HeadingSmall}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
            
            <!-- 今日统计卡片 -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="今日学习"
                               Style="{StaticResource MutedText}"
                               Margin="0,0,0,12"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock x:Name="TodayLearnedText"
                                       Text="0"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="学习"
                                       Style="{StaticResource MutedText}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock x:Name="TodayCorrectText"
                                       Text="0"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource SuccessBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="正确"
                                       Style="{StaticResource MutedText}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock x:Name="TodayWrongText"
                                       Text="0"
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DangerBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="错误"
                                       Style="{StaticResource MutedText}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- 正确率 -->
                    <StackPanel Margin="0,16,0,0">
                        <Grid>
                            <TextBlock Text="正确率"
                                       Style="{StaticResource MutedText}"/>
                            <TextBlock x:Name="AccuracyText"
                                       Text="0%"
                                       Style="{StaticResource BodyText}"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Right"/>
                        </Grid>
                        <ProgressBar x:Name="AccuracyBar"
                                     Style="{StaticResource ModernProgressBar}"
                                     Value="0"
                                     Maximum="100"
                                     Margin="0,8,0,0"
                                     Foreground="{StaticResource SecondaryBrush}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- 累计统计 -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="累计统计"
                               Style="{StaticResource MutedText}"
                               Margin="0,0,0,12"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock x:Name="TotalLearnedText"
                                       Text="0"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="单词"
                                       Style="{StaticResource MutedText}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock x:Name="TotalDaysText"
                                       Text="0"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="天"
                                       Style="{StaticResource MutedText}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock x:Name="StreakDaysText"
                                       Text="0"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource WarningBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="连续"
                                       Style="{StaticResource MutedText}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- 最近7天 -->
            <Border Style="{StaticResource Card}" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="最近7天"
                               Style="{StaticResource MutedText}"
                               Margin="0,0,0,12"/>
                    
                    <ItemsControl x:Name="DailyRecordsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding DateString}"
                                               Style="{StaticResource MutedText}"/>
                                    
                                    <ProgressBar Grid.Column="1"
                                                 Style="{StaticResource ModernProgressBar}"
                                                 Value="{Binding LearnedCount}"
                                                 Maximum="50"
                                                 Height="8"
                                                 Margin="8,0"/>
                                    
                                    <TextBlock Grid.Column="2"
                                               Text="{Binding LearnedCount}"
                                               Style="{StaticResource BodyText}"
                                               Width="30"
                                               TextAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- 成就 -->
            <Border Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="成就"
                               Style="{StaticResource MutedText}"
                               Margin="0,0,0,12"/>
                    
                    <ItemsControl x:Name="AchievementsList">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="60" 
                                        Height="60"
                                        Margin="4"
                                        CornerRadius="8"
                                        Background="{StaticResource SurfaceLightBrush}"
                                        Opacity="{Binding IsUnlocked, Converter={StaticResource BoolToOpacityConverter}}"
                                        ToolTip="{Binding Description}">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Icon}"
                                                   FontSize="24"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="10"
                                                   Foreground="{StaticResource TextMutedBrush}"
                                                   HorizontalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
